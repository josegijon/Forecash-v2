{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "paths": {
      "@core/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}